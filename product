   // using the "this." keyword to tell the computer that i want to set object parameters to the constructor parameters
       pID = this.pID; sPrice = this.sPrice; textD = this.textD; pPrice = this.pPrice; 
      numB = this.numB; numS = this.numS;  numOh = this.numOh; profitG = this.profitG;
   }
