   public static ArrayList<Product> produtStats (String fileName)
   {
      ArrayList<Product> pro = new ArrayList<Product>();
      String[] dataP;
       try
            {
               File products  = new File("C:\\Users\\donnelaar\\Downloads\\products.txt");//This is the file
               Scanner myReader = new Scanner(products);//this is whats going to read my file 
               while(myReader.hasNextLine())//this loop reads file and does the multipling and the prenting 
               {
                   String line = myReader.nextLine();
                   dataP = line.split("/s");
                   System.out.println(dataP);
               }
               myReader.close();//closing the file 
            }
            catch(FileNotFoundException|NoSuchElementException e)
            {
               System.out.println("An error occured.");
               e.printStackTrace();
            }
            
           return pro;
         }
       }
