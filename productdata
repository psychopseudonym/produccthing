                   while(transactsReader.hasNextLine())
                   {
                      String tLine = transactsReader.nextLine();
                      dataT = tLine.split("/s");
                      dataTPro.add(dataT[0]);
                      
                      System.out.println(Arrays.toString(dataT));
                      Collections.sort(dataTPro);
                      String listString = String.join(", ", dataTPro);
                      System.out.println(listString);
                      num = indexOf(",");
                      
